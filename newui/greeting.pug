extends ../template/_layout
block vars
  - var option = data.greeting
block css
  link(href=option.directory + '/public/css/uikit.css', rel='stylesheet', type='text/css')
  link(href=option.directory + '/public/css/global.css', rel='stylesheet', type='text/css')
  link(href=option.directory + '/public/css/section/common/footer.css', rel='stylesheet',type='text/css')
  link(href=option.directory + '/public/css/section/greeting/top.css', rel='stylesheet', type='text/css')
  link(href=option.directory + '/public/css/section/greeting/content.css', rel='stylesheet', type='text/css')
