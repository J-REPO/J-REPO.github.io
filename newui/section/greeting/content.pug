#greeting-content.section
  .uk-grid
    .uk-width-large-1-6.uk-hidden-small
    .uk-width-large-4-6.uk-width-small-1-1.main
      each content in option.content
        .greeting-content-content
          h2= content.title
          .caption
            each texts in content.texts
              p= texts
            each text in content.righttexts
              p.right=text
    .uk-width-large-1-6.uk-hidden-small