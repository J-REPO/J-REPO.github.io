extends ./template/_layout
block append vars
  - var title = "News - 日本ロボット教育推進機構"
  - var description = "日本ロボット教育推進機構(J-REPO)に関するお知らせなどを掲載しています"
block append body
  #news-top.top
    .title
      h1 News
  #news-content.section
    each article in data.articles
      .uk-grid.article-content
        .uk-width-large-1-5.uk-hidden-small
        .uk-width-large-3-5.uk-width-small-1-1.article-center
          .article
            a(href=article.url + ".html")
              figure.uk-overlay
                img(src=article.img_url, alt="alt")
                figcaption.uk-overlay-panel.uk-overlay-background
                  h2=article.article_title
        .uk-width-large-1-5.uk-hidden-small
  include ./section/footer